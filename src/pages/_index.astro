<body>
  <header id="header" class="l-header js-header">
    <div class="l-header__inner">
      <!-- ロゴ -->
      <div class="l-header__logo">
        <a href="/">
          <span class="l-header__logo-main">
            <img class="l-header__logo-img" src="/assets/img/common/logo.svg" alt="ロゴ" width="213" height="36">
          </span>
        </a>
      </div>
      <!-- ヘッダーナビ -->
      <div class="l-header__container">
        <nav class="p-header-nav">
          <ul class="p-header-nav__list">
            <li class="p-header-nav__item">
              <a class="p-header-nav__link" href="/">Top</a>
            </li>
            <li class="p-header-nav__item">
              <a class="p-header-nav__link" href="/about.html">テキスト</a>
